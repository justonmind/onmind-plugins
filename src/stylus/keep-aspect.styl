.keep-aspect-body
	font-family arial, sans-serif
	font-size 16px
	line-height 1.3
	color #fff
	padding 20px
	margin 0
	background-color #2d2d2d
	font-weight bold
	width 100%
	max-width 100%
	min-width 100%

.aspects
	display -webkit-flex
	display -ms-flex
	display flex
	flex-direction column

	&__row
		margin-bottom 30px
		display -webkit-flex
		display -ms-flex
		display flex
		width 100%
		justify-content space-between

.aspect
	border 1px solid  #fff
	border-radius 10px
	display flex
	flex-direction column
	align-items center
	justify-content center

	&__label
		padding 10px 20px
		margin 0
		text-align center
		background-color steelblue
		flex-grow 0
		border-radius 10px

	&_01
		width 100%
	&_02
		width 30%
	&_03
		width 15%
	&_04
		width 40%
